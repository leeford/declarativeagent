{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin/v2.2/schema.json",
    "schema_version": "v2.2",
    "name_for_human": "VolunteeringApp",
    "description_for_human": "API to interact with SharePoint lists via Microsoft Graph",
    "namespace": "volunteeringapp",
    "functions": [
        {
            "name": "getListItems",
            "description": "Retrieve list items with expanded fields",
            "capabilities": {
                "response_semantics": {
                    "data_path": "$",
                    "properties": {
                        "title": "$.@odata.context"
                    },
                    "static_template": {
                        "file": "adaptiveCards/getListItems.json"
                    }
                }
            }
        },
        {
            "name": "createListItem",
            "description": "Create a new volunteer tracker item in SharePoint list",
            "capabilities": {
                "response_semantics": {
                    "data_path": "$",
                    "properties": {
                        "title": "$.id"
                    },
                    "static_template": {
                        "file": "adaptiveCards/createListItem.json"
                    }
                }
            }
        }
    ],
    "runtimes": [
        {
            "type": "OpenApi",
            "auth": {
                "type": "OAuthPluginVault",
                "reference_id": "${{AZUREAADV2_REGISTRATION_ID}}"
            },
            "spec": {
                "url": "apiSpecificationFile/volTrackerapi.yaml"
            },
            "run_for_functions": [
                "getListItems",
                "createListItem"
            ]
        }
    ]
}
