{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "$data": "${value}",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "value.id: ${if(id, id, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.title: ${if(title, title, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.description: ${if(description, description, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.location: ${if(location, location, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.date: ${if(date, date, 'N/A')}",
                    "wrap": true
                }
            ]
        }
    ]
}
