{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin/v2.2/schema.json",
    "schema_version": "v2.2",
    "name_for_human": "VolunteeringApp",
    "description_for_human": "API to retrieve SharePoint list items with expanded fields",
    "namespace": "volunteeringapp",
    "functions": [
        {
            "name": "getUserInformation",
            "description": "Retrieve user information",
            "capabilities": {
                "response_semantics": {
                    "data_path": "$",
                    "properties": {
                        "title": "$.@odata.context"
                    },
                    "static_template": {
                        "file": "adaptiveCards/getUserInformation.json"
                    }
                }
            }
        }
    ],
    "runtimes": [
        {
            "type": "OpenApi",
            "auth": {
                "type": "OAuthPluginVault",
                "reference_id": "${{AZUREAADV2_REGISTRATION_ID}}"
            },
            "spec": {
                "url": "apiSpecificationFile/UserInfoapi.yaml"
            },
            "run_for_functions": [
                "getUserInformation"
            ]
        }
    ]
}
